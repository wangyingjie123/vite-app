{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  // 导入项目的 tsconfig.json
  "parserOptions": {
    "project": ["./tsconfig.node.json", "./tsconfig.json"],
    "sourceType": "module"
  },
  "extends": [
    // 官方eslint内置规范
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  // 使用airbnb规范无需引入
  "plugins": ["react", "react-hooks", "import", "@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    // 强制一行的最大长度，限制单行不能超过 120 个字符，字符串和正则表达式除外
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreRegExpLiterals": true,
        "ignoreTemplateLiterals": true
      }
    ],
    // 是否开头引入react
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    // 未使用变量
    "@typescript-eslint/no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    // 允许any
    "@typescript-eslint/no-explicit-any": "off",
    // 非空断言
    "@typescript-eslint/no-non-null-assertion": "off"
  },
  // 自动发现 React 版本，从而进行规范 React代码
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  // 忽略构建产物 dist、单测覆盖率报告 coverage，开启.rc 配置文件的检查（默认忽略 node_modules）
  "ignorePatterns": ["dist", "coverage", "!.*rc.cjs", "index.html"]
}
